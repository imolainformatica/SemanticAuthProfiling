{
	"require-dev" : {
		"jakub-onderka/php-parallel-lint" : "1.0.0",
		"mediawiki/mediawiki-codesniffer" : "25.0.0",
		"jakub-onderka/php-console-highlighter" : "0.3.2",
		"mediawiki/minus-x" : "0.3.1",
		"phpunit/phpunit" : "^6",
		"phpmetrics/phpmetrics" : "^2.4",
		"mediawiki/mediawiki-phan-config" : "^0.5.0"
	},
	"scripts" : {
		"test" : [
			"phpcs -p -s",
			"minus-x check ."
		],
		"phpunit" : "php ../../tests/phpunit/phpunit.php -c phpunit.xml.dist",
		"fix" : [
			"minus-x fix .",
			"phpcbf"
		],
		"phpmetrics" : "phpmetrics --report-html=./html .",
		"eslint" : "eslint -o output.html -f html js",
		"quality" : [
			"phpmetrics --report-html=./quality/phpmetrics .",
			"eslint --fix --quiet -o quality/eslint-output.html -f html js"
		]
	},
	"require" : {
		"phan/phan" : "^1.2"
	}
}